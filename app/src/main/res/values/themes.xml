<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gallery" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>

        <item name="materialButtonStyle">@style/Theme.Button</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">48dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>